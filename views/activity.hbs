<div id="NewDev" class="tabcontent">
  
  <div>
    <form action="http://127.0.0.1:5000/getfile" method="POST" enctype="multipart/form-data"
    id="myForm" style="display:block">
          <div class="form-group">
            <label for="usr">Name:</label>
            <input type="text" class="form-control" name="username" id="usr">
          </div>
          Upload Resume (Must Be In Text Format) <input type="file" name="myfile" id="fileInput"><br>
          <input id="buttonReset" class="btn btn-primary" type="submit" value="Submit" onclick="formSubmitted()">
    </form>

  </div>

  <div class="alert alert-success" id="myAlert" style="display:none">
    <strong>Resume Upload Successful!</strong> 
  </div>

</div>

